{
    "app"   : "src",
    "build" : "build",
    "dist"  : "dist",

    "paths" : {
        "scripts": [
          "src/+(app|common)/**/*.module.js",
          "src/+(app|common)/**/*.js",
          "!src/+(app|common)/**/*.spec.js"
        ],
        "templates": [
            "src/app/**/*.tpl.html",
            "src/common/**/*.tpl.html"
        ],
        "sass"   : "src/+(sass|app|common)/**/*.scss",
        "assets" : "src/assets/**",
        "html"   : "src/index.html",
        "tests"  : "src/+(app|common)/**/*.spec.js"
    },

    "bower": {
        "json": "./bower.json",
        "directory": "./vendor/",
        "exclude": [
            "jquery",
            "vendor/bootstrap-sass/assets/javascripts"
        ]
    }
}
